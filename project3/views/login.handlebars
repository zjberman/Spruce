					<div class="checkbox">
			  			<label><input type="checkbox"> Remember me</label>
					</div>
				</div>
			</div>
			<div class="form-group">        
				<button type="submit" class="sbtn" style="width:40%;">Submit</button>
			</div>
		</form>
		<p class="sh1" style="font-size:14px;text-align:center;color:#112211"><a href="" onclick="alert('Brings user to username recovery page');">Forgot Username?</a>  |  <a href="" onclick="alert('Brings user to password recovery page');">Forgot Password?</a></p>
	</div>
